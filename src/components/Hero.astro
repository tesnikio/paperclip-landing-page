---
// Hero component - Astro version
const logos = [
  { src: '/Paperclip-Default-1024.png', size: 'w-16 h-16', position: 'top-20 left-[10%]', delay: '-1s', rotate: 'rotate-12' },
  { src: '/Paperclip-ClearLight-1024.png', size: 'w-14 h-14', position: 'bottom-32 right-[15%]', delay: '-3s', rotate: '-rotate-6' },
  { src: '/Paperclip-Dark-1024.png', size: 'w-12 h-12', position: 'top-1/3 right-[10%]', delay: '-5s', rotate: 'rotate-45' },
  { src: '/Paperclip-Default-1024.png', size: 'w-11 h-11', position: 'top-[15%] left-[30%]', delay: '-2s', rotate: '-rotate-12' },
  { src: '/Paperclip-ClearDark-1024.png', size: 'w-16 h-16', position: 'bottom-[25%] left-[8%]', delay: '-4s', rotate: 'rotate-6' },
  { src: '/Paperclip-TintedDark-1024.png', size: 'w-10 h-10', position: 'top-[45%] right-[5%]', delay: '-1.5s', rotate: '-rotate-45' },
  { src: '/Paperclip-Default-1024.png', size: 'w-12 h-12', position: 'bottom-[15%] right-[30%]', delay: '-2.5s', rotate: 'rotate-12' },
  { src: '/Paperclip-ClearLight-1024.png', size: 'w-10 h-10', position: 'top-[70%] left-[25%]', delay: '-3.5s', rotate: '-rotate-6' },
  { src: '/Paperclip-Dark-1024.png', size: 'w-11 h-11', position: 'top-[8%] right-[40%]', delay: '-4.5s', rotate: 'rotate-45' },
  { src: '/Paperclip-TintedDark-1024.png', size: 'w-12 h-12', position: 'bottom-[40%] right-[8%]', delay: '-0.5s', rotate: '-rotate-12' },
  { src: '/Paperclip-Default-1024.png', size: 'w-14 h-14', position: 'top-[5%] left-[5%]', delay: '-2.2s', rotate: 'rotate-[20deg]' },
  { src: '/Paperclip-ClearDark-1024.png', size: 'w-12 h-12', position: 'bottom-[10%] left-[40%]', delay: '-3.8s', rotate: '-rotate-[15deg]' },
];
---

<section class="hero-gradient min-h-screen flex flex-col items-center justify-center px-6 relative overflow-hidden">
  <!-- Animated gradient orbs (background atmosphere) -->
  <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-gradient-to-br from-white/20 to-blue-300/10 rounded-full blur-3xl animate-float"></div>
  <div class="absolute bottom-1/3 right-1/4 w-[400px] h-[400px] bg-gradient-to-br from-sky-200/20 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
  <div class="absolute top-1/2 right-1/3 w-[300px] h-[300px] bg-gradient-to-br from-cyan-200/15 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -4s;"></div>
  
  <!-- Floating logos -->
  {logos.map((logo) => (
    <div 
      class={`absolute ${logo.position} ${logo.size} ${logo.rotate} animate-gravitate opacity-90 hover:opacity-100 transition-opacity`}
      style={`animation-delay: ${logo.delay};`}
    >
      <img 
        src={logo.src} 
        alt="Paperclip logo" 
        class="w-full h-full object-contain drop-shadow-2xl"
        loading="lazy"
      />
    </div>
  ))}
  
  <div class="text-center max-w-4xl mx-auto relative z-10">
    <div class="glass-card-strong p-12 rounded-[3rem]">
      <h1 class="text-6xl md:text-8xl lg:text-9xl font-semibold text-hero tracking-tight animate-fade-in-up">
        Copy smarter.
      </h1>
      <p class="mt-6 text-xl md:text-2xl text-hero-muted max-w-2xl mx-auto animate-fade-in-delay-1">
        Paperclip is the best native macOS clipboard manager that supercharges your productivity.
      </p>
      <div class="mt-10 animate-fade-in-delay-2">
        <a href="#download" class="btn-download inline-flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" x2="12" y1="15" y2="3"/>
          </svg>
          Download for macOS
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gravitate {
    0%, 100% {
      transform: translateY(0px) translateX(0px) rotate(var(--rotate, 0deg));
    }
    25% {
      transform: translateY(-15px) translateX(5px) rotate(calc(var(--rotate, 0deg) + 3deg));
    }
    50% {
      transform: translateY(-25px) translateX(-5px) rotate(calc(var(--rotate, 0deg) - 2deg));
    }
    75% {
      transform: translateY(-10px) translateX(8px) rotate(calc(var(--rotate, 0deg) + 2deg));
    }
  }

  .animate-gravitate {
    animation: gravitate 8s ease-in-out infinite;
  }

  .rotate-12 { --rotate: 12deg; }
  .-rotate-6 { --rotate: -6deg; }
  .rotate-45 { --rotate: 45deg; }
  .-rotate-12 { --rotate: -12deg; }
  .rotate-6 { --rotate: 6deg; }
  .-rotate-45 { --rotate: -45deg; }
  .rotate-\[20deg\] { --rotate: 20deg; }
  .-rotate-\[15deg\] { --rotate: -15deg; }
</style>
